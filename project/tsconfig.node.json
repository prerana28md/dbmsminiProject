{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["vite.config.ts", "src/server/**/*.ts"]
}
